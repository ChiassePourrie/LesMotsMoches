{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "outDir": "../dist",
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "ts-node": {
    "files": true
  }
}
